                    android:id="@+id/et_fire_t2_low"
                    android:text="Значение :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        -->

    </LinearLayout>



    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llWater"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="18dp"
            android:text="Для автополива"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_weight="1" />

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Линия полива 1"
            android:textColor="#000000"
            android:textSize="18dp" />

        <LinearLayout
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начать с:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPlL1s"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10" />

            <Button
                android:id="@+id/btnPlL1s"
                android:text=".."
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закончить в:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPlL1p"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10" />

            <Button
                android:id="@+id/btnPlL1p"
                android:text=".."
                android:layout_width="60dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поливать через "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPlL1cherez"
                android:enabled="false"
                android:layout_width="50dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" дней"
                android:textSize="18dp" />


        </LinearLayout>


        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb_L1_cherez"
            android:max="20"
            android:progress="1" />

        <TextView
            android:id="@+id/et_L1_cherez"
            android:visibility="gone"
            android:text="Значение :"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Если 0 то поливать ежедневно, 1 - полив, неполив, полив..."
            android:textSize="14dp" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">


        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Линия полива 2"
            android:textColor="#000000"
            android:textSize="18dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начать с:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPlL2s"
                android:enabled="false"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10" />

            <Button
                android:id="@+id/btnPlL2s"
                android:text=".."
                android:layout_width="60dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закончить в:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPlL2p"
                android:enabled="false"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10" />

            <Button
                android:id="@+id/btnPlL2p"
                android:text=".."
                android:layout_width="60dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поливать через "
                android:textSize="18dp" />

            <EditText
                android:enabled="false"
                android:id="@+id/etPlL2cherez"
                android:layout_width="50dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" дней"
                android:textSize="18dp" />


        </LinearLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb_L2_cherez"
            android:max="20"
            android:progress="1" />

        <TextView
            android:id="@+id/et_L2_cherez"
            android:text="Значение :"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Если 0 то поливать ежедневно, 1 - полив, неполив, полив..."
            android:textSize="14dp" />




    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="18dp"
        android:visibility="visible"
        android:id="@+id/llButtons"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Отмена"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel"
                android:layout_weight="1" />

            <Button
                android:text="Сохранить"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSave"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
</ScrollView>
