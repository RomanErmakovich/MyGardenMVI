<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
     android:visibility="visible"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llOsn"
        android:visibility="visible">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textSize="24dp"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="№ удаленного телефона (10 знаков)"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+7"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etPhone" />

            <TextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Лог действий на SD Card"
                android:textSize="18dp" />
            <CheckBox
                android:visibility="visible"
                android:id="@+id/checkBoxLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Желаемая t"
            android:textSize="18dp"
            android:layout_marginTop="4dp" />

        <SeekBar
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sb_gel_t"
            android:max="50"
            android:progress="1" />

        <TextView
            android:visibility="gone"
            android:id="@+id/et_gel_t"
            android:text="Значение :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Критически высокая Температура"
            android:textSize="18dp"
            android:layout_marginTop="4dp" />

        <SeekBar
            android:id="@+id/sb_hot_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="1" />

        <TextView
            android:id="@+id/et_hot_t"
            android:text="Значение :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Критически низкая Температура"
            android:textSize="18dp"
            android:layout_marginTop="4dp" />
        <SeekBar
            android:id="@+id/sb_low_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="1" />
        <TextView
            android:id="@+id/et_low_t"
            android:text="Значение :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обрабатывать критические значения   "
            android:textSize="18dp" />
        <CheckBox
            android:id="@+id/checkBoxKrit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llProvetr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="18dp"
            android:text="Для автопроветривания"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Температура открывания форточки 1"
            android:textSize="18dp"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/et_t_gr1"
            android:text="Значение :"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/sb_t_gr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="1" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Температура открывания форточек 1 и 2"
            android:textSize="18dp"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/et_t_gr2"
            android:text="Значение :"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/sb_t_gr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="1" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Температура открывания форточек 1,2,3"
            android:textSize="18dp"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/et_t_gr3"
            android:text="Значение :"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/sb_t_gr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50"
            android:progress="1" />



    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/llHeat"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="18dp"
            android:text="Для автоподогрева"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000000" />

        <LinearLayout
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начать с:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etHeatS"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10" />

            <Button
                android:id="@+id/btnHeatS"
                android:text=".."
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закончить в:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etHeatP"
                android:enabled="false"
                android:textColor="@color/colorBlack"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10" />

            <Button
                android:id="@+id/btnHeatP"
                android:text=".."
                android:layout_width="60dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

<!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Температура для включения обогревателя"
